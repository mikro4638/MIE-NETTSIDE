---
import Layout from "../components/Layout.astro";
---
<Layout title="Projects">
  <section class="projects-section">
    <h1>My Projects</h1>
    <div class="projects-container">

      <div class="project-card">
        <a href="/projects/2048" class="project-link">
          <h2>2048 Game</h2>
          <p>Objektorientert programmering (INF101)</p>
          <p>April 2024</p>
        </a>
      </div>

      <div class="project-card">
        <a href="/projects/tetris" class="project-link">
          <h2>Tetris</h2>
          <p>Objektorientert programmering (INF101)</p>
          <p>March 2024</p>
        </a>
      </div>

      <div class="project-card">
        <a href="/projects/snake" class="project-link">
          <h2>Snake</h2>
          <p>Innf√∏ring programmering (INF100)</p>
          <p>October 2023</p>
        </a>
      </div>

    </div>
  </section>
</Layout>

<style>
  .projects-section {
    padding: 4rem 1rem;
    background-color: #1e1e24;
    color: #f1f1f1;
    text-align: center;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: #96F7FF;
  }

  h2 {
    text-align: center;
  }

  p {
    text-align: center;
  }

  .projects-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
  }

  .project-card {
    background-color: #2c2f3a;
    padding: 2rem;
    border-radius: 12px;
    width: 300px;
    text-align: left;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
  }

  .project-card h2 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: #5DD5FF;
  }

  .project-card p {
    font-size: 1rem;
    color: #c4c4c4;
    margin-bottom: 1.5rem;
  }

  .project-link {
    display: block; /* Make the link block-level */
    text-decoration: none; /* Remove underline */
    color: inherit; /* Inherit color from parent */
    height: 100%; /* Ensure the link covers the full height */
  }

  .project-link:hover {
    color: #96F7FF; /* Change color on hover */
  }

  @media (max-width: 768px) {
    .projects-container {
      flex-direction: column;
      align-items: center;
    }

    .project-card {
      width: 100%;
      max-width: 500px;
    }
  }
</style>
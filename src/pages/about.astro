<style is:global>
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    #personal-info {
        animation: fadeIn 0.8s ease forwards;
    }

    .image-section img {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeIn 0.8s ease forwards;
        animation-delay: 0.2s;
    }

    .image-section img:nth-child(3n) {
        animation-delay: 0.4s; /* Delay for every third image */
    }

    .image-section img:nth-child(3n+1) {
        animation-delay: 0.6s; /* Delay for every first image in a row */
    }

    .image-section img:nth-child(3n+2) {
        animation-delay: 0.8s; /* Delay for every second image in a row */
    }

    body {
        background: #ffefef; /* Light pink background */
    }
</style>

---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Mie Kronkvist - Min personlige hjemmeside">
    <h1 class="fade-in" style="text-align: center; color: #ff6f61;">Hi, I'm Mie</h1>
    <p class="fade-in" style="text-align: center; max-width: 600px; margin: 0 auto;">
        I am passionate about web development, running, and learning new things!
    </p>
    <div style="text-align: center; margin-top: 20px;">
        <img src="/MieBoat.JPG" alt="Bilde av Mie" class="fade-in" style="border-radius: 8px; width: 300px; height: 300px; object-fit: cover;" />
    </div>
</Layout>

<style is:global>
    h1 {
        font-family: 'Poppins', sans-serif;
    }
    p {
        font-family: 'Poppins', sans-serif;
    }

    /* Animasjon for fade-in */
    .fade-in {
        opacity: 0;
        animation: fadeIn 1s forwards;
        animation-delay: 0.5s; /* Juster forsinkelsen etter behov */
    }

    /* Animasjon for subtile opp- og ned-bevegelser */
    @keyframes fadeIn {
        0% {
            opacity: 0;
            transform: translateY(-10px);
        }
        50% {
            opacity: 1;
            transform: translateY(5px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
